<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="andrea.pokemon.Descripcion">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="368dp"
        android:layout_height="400dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="-2dp">

        <AbsoluteLayout
            android:layout_width="315dp"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/nombreTextView"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:layout_x="164dp"
                android:layout_y="49dp"
                android:text="@string/app_name"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/tipo"
                android:layout_width="149dp"
                android:layout_height="wrap_content"
                android:layout_x="164dp"
                android:layout_y="149dp"
                android:text="@string/app_name"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="81dp"
                android:layout_y="48dp"
                android:text="Nombre:"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="80dp"
                android:layout_y="149dp"
                android:text="Tipo:"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="81dp"
                android:layout_y="83dp"
                android:text="Habilidad:"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="78dp"
                android:layout_y="116dp"
                android:text="Experiencia:"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/habilidad"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:layout_x="166dp"
                android:layout_y="84dp"
                android:text="@string/app_name"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/experiencia"
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:layout_x="168dp"
                android:layout_y="115dp"
                android:text="@string/app_name"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="80dp"
                android:layout_y="185dp"
                android:text="Peso:"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="82dp"
                android:layout_y="218dp"
                android:text="Altura:"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/peso"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_x="166dp"
                android:layout_y="187dp"
                android:text="@string/app_name"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/altura"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:layout_x="162dp"
                android:layout_y="217dp"
                android:text="@string/app_name"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_x="28dp"
                android:layout_y="274dp"
                app:srcCompat="@drawable/poke" />

        </AbsoluteLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>